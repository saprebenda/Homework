<body>
<table>
	<tr>
		<td style="font-size:20px; position:relative; left: 5%; text-decoration: underline">Deal<span class="Deals"></span></td>
		<td style="font-size:20px; position:relative; left: 25%; text-decoration: underline">Price($)</td>
		<td style="font-size:20px; position:relative; left: 45%; text-decoration: underline">User</td>
	</tr>

<% @deals_high.each do |deal| %>
	<tr class="dpu">
		<td class="high" style="position:relative; left: 5%"><%= deal.Object_Name %></td>
		<td class="high" style="position:relative; left: 25%"><%= deal.price %></td>
		<td class="high" style="position:relative; left: 45%"><%= deal.User.name %></td>
		<td style="position:relative; left: 60%"><%= button_to "show deal",deal_path(deal.id), method: :get %></td>
		<td style="position:relative; left: 70%"><%= button_to "edit deal", edit_deal_path(deal.id), method: :get %></td>
		<td style="position:relative; left: 80%"><%= button_to "delete deal", deal, confirm: "You are about to delete this deal. Would you like to continue?", method: :delete %></td>
	</tr>
<% end %>

