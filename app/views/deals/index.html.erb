<body>
<table>
	<tr>
		<td style="font-size:20px; position:relative; left:10%; text-decoration: underline">Deal<span class="Deals"></span></td>
		<td style="font-size:20px; position:relative; left:30%; text-decoration: underline">Price($)</td>
		<td style="font-size:20px; position:relative; left: 50%; text-decoration: underline">User</td>
	</tr>

<% @deals_high.each do |deal| %>
	<tr>
		<td class="high" style="position:relative; left: 10%"><%= deal.Object_Name %></td>
		<td class="high" style="position:relative; left: 30%"><%= deal.price %></td>
		<td class="high" style="position:relative; left: 50%"><%= deal.User.name %></td>
		<td style="position:relative; left: 65%"><%= button_to "show deal",deal_path(deal.id) %></td>
		<td style="position:relative; left: 75%"><%= button_to "edit deal", edit_deal_path(deal.id) %></td>
		<td style="position:relative; left: 85%"><%= button_to "delete deal", deal, confirm: "You are about to delete this deal. Would you like to continue?", method: :delete %></td>
	</tr>
<% end %>

